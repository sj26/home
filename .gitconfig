[user]
	name = Samuel Cochran
	email = sj26@sj26.com

[alias]
	blame = blame --abbrev=6
	ctags = !.git/hooks/ctags
	ff = -c "merge.defaultToUpstream=true" merge --ff-only
	fff = pull --ff-only
	subup = submodule update --init --recursive

[credential]
	helper = osxkeychain

[color]
	ui = auto

[column]
	ui = auto,dense

[commit]
	gpgSign = true

[diff]
	submodule = log
	word-diff = color
	compactionHeuristic = true

[push]
	default = simple

[rebase]
	autosquash = true

[submodule]
	fetchJobs = 4

[http "https://gopkg.in"]
	followRedirects = true

[url "https://github.com/"]
	insteadOf = git://github.com/
	insteadOf = git@github.com:
	insteadOf = http://github.com/
