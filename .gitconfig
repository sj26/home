[advice]
	detachedHead = false

[alias]
	blame = blame --abbrev=6
	ctags = !.git/hooks/ctags
	ff = -c "merge.defaultToUpstream=true" merge --ff-only
	fff = pull --ff-only
	subup = submodule update --init --recursive

[color]
	ui = auto

[column]
	ui = auto,dense

[core]
	pager = delta

[credential]
	helper = osxkeychain

[delta]
	light = true
	line-numbers = true
	side-by-side = true

[diff]
	submodule = log
	word-diff = color
	compactionHeuristic = true
	colorMoved = default

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[http "https://gopkg.in"]
	followRedirects = true

[hub]
	protocol = https

[init]
	defaultBranch = main

[interactive]
	diffFilter = delta --color-only

[push]
	default = simple

[rebase]
	autosquash = true

[submodule]
	fetchJobs = 4

[url "https://github.com/"]
	insteadOf = git://github.com/
	insteadOf = git@github.com:
	insteadOf = http://github.com/

[user]
	name = Samuel Cochran
	email = sj26@sj26.com
